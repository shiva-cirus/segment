{
  "metadata": {
    "spec-version": "1.6"
  },
  "display-name": "Segment",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName",
          "widget-attributes": {
            "placeholder": "Name used to identify this sink for lineage"
          }
        },
        {
          "widget-type": "select",
          "label": "Operation Type",
          "name": "operationType",
          "widget-attributes": {
            "default": "Identify",
            "values": [
              "Identify",
              "Track",
              "Screen",
              "Page",
              "Group",
              "Alias"
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Input field containing writeKey",
          "name": "writeKey",
          "description": "Field name containing the Write Key to be used for Segment API. "
        },
        {
          "widget-type": "textbox",
          "label": "Input field containing userId",
          "name": "userId",
          "description": "Field name containing the userID to be used for Segment API. "
        },
        {
          "widget-type": "keyvalue",
          "label": "Traits Mappings",
          "name": "traitsMappings",
          "widget-attributes" : {
            "placeholder": "Mappings from record field to Traits. Column names must be formatted as k=v;k=v;.",
            "delimiter": ";",
            "kv-delimiter": "="
          }
        },
        {
          "widget-type": "keyvalue",
          "label": "Context Mappings",
          "name": "contextMappings",
          "widget-attributes" : {
            "placeholder": "Mappings from record field to Context. Column names must be formatted as k=v;k=v;.",
            "delimiter": ";",
            "kv-delimiter": "="
          }
        }
      ]
    },
    {
      "label" : "Advanced",
      "properties" : [
        {
          "widget-type": "number",
          "label": "Connection Timeout in seconds",
          "name": "connectTimeOut",
          "widget-attributes": {
            "default": "15",
            "min": "1",
            "max": "60"
          }
        },
        {
          "widget-type": "number",
          "label": "Read Timeout in seconds",
          "name": "readTimeOut",
          "widget-attributes": {
            "default": "15",
            "min": "1",
            "max": "60"
          }
        },
        {
          "widget-type": "number",
          "label": "Write Timeout in seconds",
          "name": "readTimeOut",
          "widget-attributes": {
            "default": "15",
            "min": "1",
            "max": "60"
          }

        }
      ]
    }
  ],
  "outputs": [ ],
  "jump-config": {
    "datasets": [
      {
        "ref-property-name": "referenceName"
      }
    ]
  },
  "filters": [
    {
      "name": "showIdentifyProperties",
      "condition": {
        "expression": "operationType == 'Identify'"
      },
      "show": [
        {
          "type": "property",
          "name": "userId"
        },
        {
          "type": "property",
          "name": "traitsMappings"
        },
        {
          "type": "property",
          "name": "contextMappings"
        }
      ]
    },
    {
      "name": "showIdentifyProperties",
      "condition": {
        "expression": "operationType == 'Track'"
      },
      "show": [
        {
          "type": "property",
          "name": "userId"
        }
      ]
    }
  ]
}
